    app:startDestination="@id/nav_scan">

    <fragment
        android:id="@+id/nav_scan"
        android:name="com.example.signapp.ui.home.HomeFragment"
        android:label="@string/menu_scan"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_sign"
        android:name="com.example.signapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_sign"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_manage"
        android:name="com.example.signapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_manage"
        tools:layout="@layout/fragment_slideshow" />
