<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="姓名："
            android:textColor="#3366ff"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贺楠轩"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@id/item_name_view"
            app:layout_constraintTop_toTopOf="@id/item_name_view"/>

        <TextView
            android:id="@+id/item_id_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号："
            android:textSize="23sp"
            android:textColor="#cd2626"
            app:layout_constraintStart_toStartOf="@id/item_name_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021006019"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/item_id_view"
            app:layout_constraintBaseline_toBaselineOf="@id/item_id_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_sign_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="签到状态："
            android:textColor="#3366ff"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已签到"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@id/item_sign_view"
            app:layout_constraintTop_toTopOf="@id/item_sign_view"/>

        <TextView
            android:id="@+id/item_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到时间："
            android:textSize="23sp"
            android:textColor="#cd2626"
            app:layout_constraintStart_toStartOf="@id/item_sign_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-06-18"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/item_time_view"
            app:layout_constraintBaseline_toBaselineOf="@id/item_time_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>